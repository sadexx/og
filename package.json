{
  "name": "olympus-grip-api",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=11.0.0"
  },
  "main": "./build/main.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p build/modules/deep-link/.well-known && cp src/modules/deep-link/.well-known/apple-app-site-association build/modules/deep-link/.well-known/",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "prettier:fix": "prettier --write \"**/*.ts\"",
    "prettier:check": "prettier --check \"**/*.ts\"",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src --ext .ts",
    "start": "node build/main.js",
    "start:prod": "node build/main.js",
    "start:dev": "node --watch  build/main.js",
    "start:watch": "concurrently \"tsc --watch\" \"node --watch  build/main.js\"",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/common/configs/typeorm.config-migrations.ts",
    "migration:generate": "npm run typeorm:cli migration:generate -n ./src/database/migrations/${npm_config_name:-migration}",
    "migration:run": "npm run typeorm:cli migration:run",
    "migration:revert": "npm run typeorm:cli migration:revert"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.842.0",
    "@aws-sdk/client-sqs": "^3.887.0",
    "@aws-sdk/lib-storage": "^3.842.0",
    "@google-cloud/text-to-speech": "^5.8.1",
    "bcrypt": "^5.1.1",
    "bullmq": "^4.18.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^3.5.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.1.14",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.25",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.4",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^3.0.13",
    "@types/pg": "^8.15.4",
    "@types/validator": "^13.15.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-promise": "^6.6.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "typescript": "^5.8.3"
  }
}
